		System.out.print("정수값을 입력하시오:");
		int n = sc.nextInt();
		
		// 전채 합
//		int sum = 0;
//		for(int i=1; i < n+1; i++) {
//			sum = sum + i;
//		}
//		System.out.println("정수의 전체 합: " + sum);
		
		// 짝수 합
//		int sum = 0;
