package com.ruby.java.test1;

public class Cylinder {

	int radius = 5;
	int height = 10;
	double volume;
	double area;
	
	void setData(int r, int h, int p) {
		radius = r;
		height = h;
	}
	
	void getVolume() {
		volume = Math.PI * radius * radius * height;
		System.out.println("원기둥의 부피: " + volume);
	}
	
	void getArea() {
		area = Math.PI * radius * radius * 2 + (2 * Math.PI * radius) * height;
		System.out.println("원기둥의 겉넓이: " + area);
	}
	
}
