package quiz;

import java.util.Scanner;

public class Quiz2 {
	
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		
		// 전채 합
//		int sum = 0;
//		for(int i=0; i < n+1; i++) {
//			sum = sum + i;
//		}
//		System.out.println(sum);
		
		// 홀수 합
		int sum = 0;
		for(int i=0; i < n+1; i++) {
			if((i%2) == 0) {
				sum = sum + i;
			}
		}
		System.out.println(sum);
		
		
	}
}
